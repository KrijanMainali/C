#include<stdio.h>
int main()
{
    int i,j;
    int a[2][2];
    int b[2][2];
    printf("enter the matrix:\n");
    for(i=0;i<2;i++)
    {
        for(j=0;j<2;j++)
        {
            scanf("%d\t",&a[i][j]);
        }
        printf('\n');
    }
    printf("the transpose of the matrix is");
    for(i=0;i<2;i++)
    {
        for(j=0;j<2;j++)
        {
            b[i][j]=a[j][i];
        }
    }
    for(i=0;i<2;i++)
    {
        for(j=0;j<2;j++)
        {
            printf("%d\t",&b[i][j]);
        }
        printf('\n');
    }
    return 0;
}
